{% extends 'base1.html.twig' %}

{% block container %}
    <div style="margin-left: 20%;">



    <a href="{{ path('afficher_liste_resident_pour_admin')}}" class="btn btn-success" role="button">retourner a la liste des residents</a>


    <!--donnees personnelles-->
        <div class="col-md-12 col-sm-12 col-xs-12">
            <br><br>
            <div class="card-body"><h2>Données personnelles :</h2>
                <!--Table-->
                <table class="table table-hover">
                    <!--Table head-->

                    <tr >
                        <td class="text-black">Nom :</td>
                        <td>{{ resident.nomResident }}</td>
                        <td class="text-black">Prénom :</td>
                        <td>{{ resident.prenomResident }}</td>


                    </tr>
                    <tr >
                        <td class="text-black">Age :</td>
                        <td>{{ resident.ageResident }}</td>
                        <td class="text-black">Sexe :</td>
                        <td>{{ resident.sexeResident }}</td>


                    </tr>
                    <tr >
                        <td class="text-black">Nom Maison de retraite :</td>
                        <td>{{ resident.Maison.nomMaison }}</td>
                        <td class="text-black">Nombre de visite :</td>
                        <td>{{ dossier[0].nbVisite }}</td>


                    </tr>
                    <tr >
                        <td class="text-black">Problémes de santé :</td>
                        <td>{{ dossier[0].problemesSante }}</td>



                    </tr>


                </table>
                <!--Table-->
            </div>
        </div>

        <!-- allergies -->


        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title"> <h3>Allergies :</h3>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a>
                                </li>
                                <li><a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">

                    <div class="table-responsive">
                        <table class="table table-striped jambo_table bulk_action">
                            <thead>
                            <tr class="headings">
                                <th>
                                </th>
                                <th class="column-title">Nom d'allergie </th>
                                <th class="column-title">Antecedants </th>
                                <th class="column-title">Date </th>

                                </th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for allergie in allergies %}

                            <tr class="even pointer">
                                    <td class="a-center ">
                                    </td>
                                <td>{{ allergie.descriptionAllergie }}</td>
                                <td>{{ allergie.antecedants }}</td>
                                <td>{{ allergie.dateAllergies |date('Y-m-d') }}</td>

                                </tr>

                            </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
        </div>

        <!--prescriptions-->


        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title"> <h3>Prescriptions de médicaments :</h3>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a>
                                </li>
                                <li><a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">

                    <div class="table-responsive">
                        <table class="table table-striped jambo_table bulk_action">
                            <thead>
                            <tr class="headings">
                                <th>
                                </th>
                                <th class="column-title">Médicament </th>
                                <th class="column-title">Date de début de traitement </th>

                            </tr>
                            </thead>

                            <tbody>
                            {% for prescription in prescriptions %}

                            <tr class="even pointer">
                                    <td class="a-center ">
                                    </td>
                                <td scope="row">{{ prescription.descriptionMedicament }}</td>
                                <td>{{ prescription.dateDebutTraitement |date('Y-m-d')  }}</td>

                                </tr>

                            {% endfor %}

                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
        </div>
         <a href="{{ path('supprimer_dossier',{'id':dossier[0].idDossier})}}" class="btn btn-danger" role="button">Supprimer le dossier</a>



    </div>
{% endblock %}